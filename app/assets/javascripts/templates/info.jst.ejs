<img src="<%= poster %>" />

<h2><%= title %></h2>

<dl>

	<dt>Seen by Chris</dt>
	<dd>
		<% if(chris == 1) { %>
			<i class="icon-eye-open"></i>
		<% } else { %>
			&nbsp;
		<% } %>
	</dd>

	<dt>Seen by Sarah</dt>
	<dd>
		<% if(sarah == 1) { %>
            <i class="icon-eye-open"></i>
		<% } else { %>
            &nbsp;
		<% } %>
	</dd>

	<dt>On Shortlist</dt>
	<dd>
		<% if(shortlist == 1) { %>
            <i class="icon-th-list"></i>
		<% } else { %>
            &nbsp;
		<% } %>
	</dd>

	<dt>Genre(s)</dt>
	<dd>
		<ul>
			<% _.each(genres, function (genre) { %>

				<li><%= genre.name %></li>

			<% }); %>
		</ul>
	</dd>

	<% if (critics_score > 0) { %>
		<dt class="rating">Rating</dt>
		<dd>
			<%= critics_score %>%
			<span class="rating-meter">
				<span style="width: <%= critics_score %>px;"></span>
			</span>
		</dd>
	<% } %>

	<dt>Year</dt>
	<dd>
		<%= year %>
	</dd>

	<dt>Runtime</dt>
	<dd>
		<%= runtime %>
	</dd>

	<dt>MPAA Rating</dt>
	<dd>
		<%= mpaa_rating %>
	</dd>

	<dt>Cast</dt>
	<dd>
		<ul>
			<% _.each(cast, function (member) { %>

				<li><%= member.name %></li>

			<% }); %>
		</ul>
	</dd>

</dl>

<a href="#" class="tab edit-movie" title="Edit Movie">
    <i class="icon-edit"></i>
</a>
