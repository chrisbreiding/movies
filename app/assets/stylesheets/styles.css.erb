body {
    background: #D2DFE9;
}

.container {
    margin: 20px auto;
    position: relative;
}

h1,h2,h3,h4,h5,h6 {
    line-height: 1.5em;
}

h1 {
    color: #313E47;
}

    h1 span {
        cursor: pointer;
    }

h2 {
    font-size: 18px;
}

p,
dl {
    margin: 10px 0;
}

/*** Login ***/

.login .container {
    width: 250px;
}

.login h1 {
    margin-bottom: 20px;
}

.login input[type=text],
.login input[type=password] {
    width: 240px;
}

.login input[type=submit] {
    float: right;
    margin-top: 10px;
    padding: 5px 10px;
}

/*** Movies ***/

.loading .well {
    background-image: url(<%= asset_path('ajax-loader.gif') %>);
    background-position: 50% 50%;
    background-repeat: no-repeat;
    min-height: 29px;
}

.movie-search {
    position: relative;
}

    .movie-search input {
        display: block;
        padding: 10px 20px;
        width: 898px;
    }

    a.clear-search {
        -moz-border-radius: 50px;
        -webkit-border-radius: 50px;
        border-radius: 50px;
        display: block;
        outline: none;
        padding-left: 1px;
        position: absolute;
            top: 8px;
            right: 8px;
        text-align: center;
        width: 23px;
        height: 24px;
        line-height: 20px;
    }

    a.clear-search:hover,
    a.clear-search:focus {
        background-color: #d3d3d3;
    }

.well {
    background: #f5f5f5;
    border: solid 1px #CCC;
    padding: 5px;
}

.genre-wrap ul,
.movie-wrap ul {
    list-style: none;
    margin-left: 0;
}

    .genre-wrap li,
    .movie-wrap li {
        background: #FFF;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        border: solid 1px #e3e3e3;
        cursor: pointer;
        margin: 5px;
        padding: 7px 10px;
    }

    .genre-wrap li:hover,
    .genre-wrap li:focus,
    .genre-wrap li.active {
        background: #BADA55;
    }

    .movie-wrap li:hover,
    .movie-wrap li:focus,
    .movie-wrap li.active {
        background: #559FD9;
    }

    .genre-wrap li.error,
    .movie-wrap li.error {
        background: #FFF !important;
        color: #999;
        cursor: default;
    }

.info-persister {
    display: none;
    float: none;
    position: fixed;
    top: 10px;
}

     .info-wrap .well {
        position: relative;
    }

       .info-box {
            margin: 10px;
        }

            .info-box h2 {
                color: #D95594;
                margin: 0;
                padding: 5px 10px;
            }

            .info-box img {
                -moz-border-radius-topright: 3px;
                -webkit-border-top-right-radius: 3px;
                border-top-right-radius: 3px;
                float: right;
                margin: 5px 0 10px 15px;
            }

            .info-box dl {
                margin: 0;
            }

            .info-box dt {
                float: left;
                padding: 7px 0 0 10px;
                width: 100px;
            }

            .info-box dd {
                margin-left: 0;
                padding: 7px 5px 7px 115px;
            }

            .info-box dd:nth-child(4n) {
                background: #F8DCEA;
            }

            .info-box dd:last-child {
                -webkit-border-radius: 0 0 3px 3px;
                -moz-border-radius: 0 0 3px 3px;
                border-radius: 0 0 3px 3px;
            }

                .info-box [class^="icon-"],
                .info-box [class*=" icon-"] {
                    opacity: 0.7;
                }

                .info-box ul {
                    list-style: none;
                    margin: 0;
                }

                .info-box .rating {
                    padding-left: 30px;
                    position: relative;
                    width: 70px;
                }

                    .rating:before {
                        background: url(<%= asset_path('icon-sprite.png') %>) -48px -164px no-repeat;
                        content: '';
                        display: block;
                        position: absolute;
                            left: 4px;
                            top: 3px;
                        width: 24px;
                        height: 24px;
                    }

                .rating-meter,
                .rating-meter span {
                    display: block;
                    -moz-border-radius: 3px;
                    -webkit-border-radius: 3px;
                    border-radius: 3px;
                }

                .rating-meter {
                    background: #000;
                    float: right;
                    margin-top: 2px;
                    width: 102px;
                    height: 18px;
                }

                    .rating-meter span {
                        background: #D95594;
                        float: left;
                        margin: 1px;
                        height: 16px;
                    }

            a.add-movie {
                background: #e3e3e3;
                -moz-border-radius: 0 3px 3px 0;
                -webkit-border-radius: 0 3px 3px 0;
                border-radius: 0 3px 3px 0;
                border: solid 1px #c7c7c7;
                display: block;
                padding: 3px;
                position: absolute;
                    right: -22px;
                    top: 3px;
                text-decoration: none;
            }

            a.add-movie:hover,
            a.add-movie:focus {
                background: #FFF;
            }

                .add-movie i {
                    opacity: 0.7
                }

                .add-movie:hover i,
                .add-movie:focus i {
                    opacity: 1.0;
                }

.lightbox {
    background: rgba(255,255,255,0.5);
    position: absolute;
        left: 0;
        top: 0;
    width: 100%;
    height: 100%;
}

    .add-movie-form {
        background: #FFF;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        border: solid 1px #d3d3d3;
        -moz-box-shadow: 0 0 20px rgba(0,0,0,0.2);
        -webkit-box-shadow: 0 0 20px rgba(0,0,0,0.2);
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
        margin-left: -171px;
        padding: 20px;
        position: absolute;
            left: 50%;
            top: 150px;
        width: 300px;
    }